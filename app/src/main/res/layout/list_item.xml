<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:weightSum="10"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent">

    <LinearLayout
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/help_list_group_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="카라(KARA)"
                android:textColor="@color/list_pont"
                android:textSize="17sp" >
            </TextView>

            <ImageView
                android:id="@+id/help_list_heart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="270dp"
                android:src="@drawable/ic_favorite_border" >
            </ImageView>

        </LinearLayout>

        <TextView
            android:id="@+id/help_list_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="해외이동 봉사자 급구합니다"
            android:textColor="@color/black"
            android:textSize="18dp">
        </TextView>

        <TextView
            android:id="@+id/help_list_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="2022.07.25~2022.07.30"
            android:textColor="@color/list_pont"
            android:textSize="13dp" />


    </LinearLayout>

</LinearLayout>
    


