<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signUp_profile">

    <LinearLayout
        android:id="@+id/profile_tv_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="사용할 이름과"
            android:fontFamily="@font/nanumsquareroundb"
            android:textColor="@color/font_black"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="프로필을 등록해주세요"
            android:textColor="@color/font_black"
            android:fontFamily="@font/nanumsquareroundb"
            android:textSize="16sp"
            android:layout_marginTop="5dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/sign_up_profile_iv"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginTop="50dp"
            android:background="@android:color/transparent"
            app:civ_border_color="#ffcf30"
            app:civ_border_width="3dp"
            android:src="@drawable/ic_care_ever_logo"
            app:civ_border_overlay="false" />

        <ImageButton
            android:id="@+id/camera_sign_up_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_camera_profile" />

        <EditText
            android:id="@+id/sign_up_nickname_et"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:backgroundTint="#cccccc"
            android:hint="사용할 이름을 입력해주세요"
            android:textSize="14dp"
            android:ems="5"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/sign_uo_nickname_limit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0/5 자"
            android:textColor="@color/login_gray"
            android:textSize="12sp"
            android:layout_gravity="right"
            android:layout_marginEnd="5dp" />

        <Button
            android:id="@+id/sign_up_profile_btn"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:background="@drawable/background_user_check_btn"
            android:text="환영해요!"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:fontFamily="@font/nanumsquareroundb"
            android:layout_marginTop="200dp" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>